                                    </HBox.margin>
                                </Button>
                                <Button fx:id="cancelBtn" mnemonicParsing="false" onAction="#cancel" text="Cancel">
                                    <HBox.margin>
                                        <Insets left="5.0" top="5.0"/>
                                    </HBox.margin>
                                </Button>
                            </children>
