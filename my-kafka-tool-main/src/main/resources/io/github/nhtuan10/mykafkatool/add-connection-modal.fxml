                                                                   prefWidth="477.0" GridPane.columnIndex="1"
                                                                   GridPane.rowIndex="1"/>
                                                        <Label prefHeight="17.0" prefWidth="102.0"
                                                               text="Schema Registry" GridPane.rowIndex="2"/>
                                                        <TextField fx:id="schemaRegistryTextField"
                                                                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>
